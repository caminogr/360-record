<!DOCTYPE html>
<html>
  <head>
    <title>RailsProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <div class='signin'>
      <% unless current_user %>
        <%= link_to 'Sign in', '/auth/spotify' %>
      <% end %>
    </div>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
